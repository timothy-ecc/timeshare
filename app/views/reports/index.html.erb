
<div class="container">
  <div>
    <p style="color: green"><%= notice %></p>

    <h1>Reports</h1>

    <div id="reports">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Week Ending</th>
          <th>Rating</th>
        </tr>
        </thead>
        <tbody>
        <% @reports.each do |report| %>
          <tr onclick="location.href='<%= report_path(report) %>'" >

            <td>
              <%= report.week_ending.strftime("%m/%d/%Y") %>
            </td>
            <td>
              <%= define_rating(report.rating) %>
            </td>
          </tr>
          <p>

          </p>
        <% end %>
        </tbody>
      </table>
    </div>


    <%= link_to "New report", new_report_path %>

  </div>


</div>
