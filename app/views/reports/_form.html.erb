<div class="container">

  <%= form_with(model: report) do |form| %>
    <% if report.errors.any? %>
      <div class="card card-body bg-secondary">
        <div class="text-warning">
          <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

          <ul>
            <% report.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="mt-3 mb-3 card card-body">
      <div class="row">
        <div class="col-6">
          <%= form.label :week_ending, style: "display: block" %>
          <%= form.date_field :week_ending %>
        </div>
        <div class="col-6">
          <%= form.label :rating, style: "display: block" %>

          <%= form.radio_button(:rating, 1) %>
          <%= label_tag(:rating, "Burnout!") %>

          <%= form.radio_button(:rating, 2) %>
          <%= label_tag(:rating, "Difficult") %>

          <%= form.radio_button(:rating, 3) %>
          <%= label_tag(:rating, "Neutral") %>

          <%= form.radio_button(:rating, 4) %>
          <%= label_tag(:rating, "Good") %>

          <%= form.radio_button(:rating, 5) %>
          <%= label_tag(:rating, "Exceptional") %>

        </div>
      </div>

    </div>

    <div>

    </div>

    <div class="mt-3">
     <strong> <%= form.label "Accomplishments/Tasks Completed This Week" %> </strong>
      <%= form.rich_text_area :completed %>
    </div>

    <div class="mt-3">
     <strong> <%= form.label "Upcoming Tasks Next Week" %> </strong>
      <%= form.rich_text_area :upcoming %>
    </div>

    <div class="mt-3">
     <strong> <%= form.label "Notes" %> </strong>
      <%= form.rich_text_area :notes %>
    </div>
    <div class="mt-2">
      <%= form.submit :Submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>


